/*The main sheetstyle file*/

body,
html {
  font-family: 'lato', Tahoma, Geneva, sans-serif;
  background-color: rgb(255, 255, 255);
}

h1,
h2,
h3,
h4,
h5,
h6,
p {
  color: rgb(51, 51, 51);
}

tr:nth-child(even) {
  background-color: rgb(244, 244, 244);
}

th,
td {
  padding: 0.1em 0.5em;
}

th {
  font-weight: bold;
  text-align: left;
  background-color: rgb(238, 238, 238);
}

#list {
  width: 100%;
  border: 1px solid rgb(170, 170, 170);
}

a {
  color: rgb(66, 139, 202);
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

#content {
  width: 80%;
  margin: 0 auto;
}

tr:hover {
  background-color: rgba(128, 128, 128, .3);
}

.blog-name {
  color: black;
  text-decoration: none;
}

.blog-name:hover {
  color: black;
  border-bottom: 1px solid black;
}

.gap {
  height: 0;
  border: 1px dotted rgba(128, 128, 128, .3);
}

#page_next {
  float: left;
}

#page_prev {
  float: right;
}