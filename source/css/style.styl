/*The main sheetstyle file*/

body,
html {
  font-family: Tahoma, Geneva, sans-serif;
  background-color: rgb(255, 255, 255);
}

h1,
h2,
h3,
h4,
h5,
h6,
p {
  color: rgb(51, 51, 51);
}

#content{
  width: 65%;
  max-width: 960px;
}

tr:nth-child(even) {
  background-color: rgb(244, 244, 244);
}

th,
td {
  padding: 0.1em 0.5em;
}

th {
  font-weight: bold;
  text-align: left;
  background-color: rgb(238, 238, 238);
}

#list {
  width: 100%;
  border: 1px solid rgba(255, 255, 255,.1);
  border-top: 0;
}

img{
  max-width: 80%;
}

header{
  padding-bottom: 10px;
}

header img {
  height: 100px;
  width: 100px;
  display: block;
  float: left
}

a {
  color: rgb(66, 139, 202);
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

#content {
  width: 80%;
  margin: 0 auto;
}

tr:hover {
  background-color: rgba(128, 128, 128, .3);
}

.gap {
  height: 0;
  border: 1px dotted rgba(128, 128, 128, .3);
}

#page_next {
  float: left;
}

#page_prev {
  float: right;
}

#post-footer {
  margin-bottom: 200px;
}