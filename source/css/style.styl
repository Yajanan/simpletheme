*{
    font-family: 'lato','Microsoft YaHei','STHeiti';
}

h1,h2,h3,h4,h5,h6,p{
    color: rgb(51, 51, 51);
}

body,html{
    background-color: rgb(255, 255, 255);
}
            
tr:nth-child(even){
    background-color: rgb(244,244,244);
}
            
th,td{
    padding: 0.1em 0.5em;
}
            
th{
    text-align: left;
    font-weight: bold;
    background: rgb(238, 238, 238);
}
            
#list{
    border: 1px solid rgb(170, 170, 170);
    width: 100%;
}
            
a{
    color: #428bca;
    text-decoration: none;
}
            
a:hover{
    text-decoration: underline;
}
            
#content{
    width: 80%;
    margin: 0 auto;
}
            
tr:hover{
    background-color: rgba(128, 128, 128,.3);
}
            
header a{
    text-decoration: none;
    color: black;
}
            
header a:hover{
    text-decoration: underline;
    color: black;
}

.gap{
    height: 0;
    border: 6px solid rgb(170, 170, 170);
}

#page_next{
    float: left;
}

#page_prev{
    float: right;
}